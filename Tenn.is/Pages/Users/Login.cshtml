@page
@model Tennis.Pages.Users.LoginModel
@{
    ViewData["Title"] = "Log ind";
}

<div align="center" >
    <div class="container card cardouter" style="max-width: 500px">
<h1 class="display-4 textdark">Log ind</h1>
<span class="text-danger">@Model.Message</span>
<form method="post" class="container card cardfocus p-2">
    <br />
    <div class="form-group">
        <table>
            <tr>
                <td>Brugernavn: </td>
                <td><Input type="text" asp-for="@Model.Username" /></td>


            </tr>
            <tr>
                <td>Password: </td>
                <td><Input type="password" asp-for="@Model.Password" /></td>

            </tr>
        </table>
    </div>
    <br />
    <div class="form-group">
        <Input type="submit" value="Log ind" class="btn btn-success" />
    </div>

</form>
</div>
</div>
