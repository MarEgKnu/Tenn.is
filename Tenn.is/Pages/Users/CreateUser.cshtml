@model Tennis.Pages.Users.CreateUserModel
@{
    ViewData["Title"] = "Opret ny bruger";
}
<div class="card cardouter p-3">
    <h2 class="display-4 textdark">Opret ny bruger:</h2>
<form method="post" class="card cardfocus p-3">
        <p class="text-danger">@Model.DatabaseString</p>
    <input type="hidden" asp-for="@Model.NewUser.Password" />
    <div class="form-group">
        <label asp-for="@Model.NewUser.Username" class="control-label"></label>
        <input asp-for="@Model.NewUser.Username" class="form-control" />
        <span asp-validation-for="NewUser.Username" class="text-danger"></span>
    </div>
